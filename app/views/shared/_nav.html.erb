<div class="container">
  <nav class="d-flex flex-wrap aling-items-center justify-content-center justify-content-lg-start">
    <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-5">
      <% if user_signed_in? %>
        <li>
          <%= link_to "User update", edit_user_registration_path, class: "nav-link px-5 mr-10" %>
          <%= current_user.full_name %>
        </li>
      <% end %>
      <li>
        <%= link_to "Home", root_path, class: "nav-link px-5 mr-10" %>
      </li>
      <li>
        <% if user_signed_in? %>
          <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: "Are you shure?" }, class: "nav-link px-5 mr-10" %>
        <% else %>
          <%= link_to "Log in", "#", class: "nav-link px-5 mr-10", data: { bs_toggle: "modal", bs_target: "#staticBackdrop" } %>
          <%= render "devise/sessions/new" %>
        <% end %>
      </li>
      <% if current_user&.admin? %>
        <li>
          <%= link_to "Admin panel", admin_posts_path, class: "nav-link px-5 mr-10" %>
        </li>
      <% end %>
    </ul>
  </nav>
</div>